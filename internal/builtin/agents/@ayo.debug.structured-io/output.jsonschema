{
  "type": "object",
  "properties": {
    "service": {
      "type": "string",
      "description": "Name of the service being deployed"
    },
    "environment": {
      "type": "string",
      "description": "Target deployment environment",
      "enum": ["dev", "staging", "prod"]
    },
    "version": {
      "type": "string",
      "description": "Version being deployed"
    },
    "dry_run": {
      "type": "boolean",
      "description": "Whether this is a dry run simulation"
    },
    "status": {
      "type": "string",
      "description": "Deployment status",
      "enum": ["pending", "in_progress", "completed", "simulated"]
    },
    "steps": {
      "type": "array",
      "description": "List of deployment steps",
      "items": {
        "type": "object",
        "properties": {
          "order": {
            "type": "integer",
            "description": "Step order number"
          },
          "action": {
            "type": "string",
            "description": "Description of the action"
          }
        },
        "required": ["order", "action"]
      }
    },
    "notifications": {
      "type": "array",
      "description": "List of email addresses that will be notified",
      "items": {
        "type": "string"
      }
    }
  },
  "required": ["service", "environment", "version", "status", "steps"]
}
